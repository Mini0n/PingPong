<p id="notice"><%= notice %></p>

<h1>Listing Ping Pong Games</h1>

<table>
  <thead>
    <tr>
      <th>Dateplayer</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Score2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ping_pong_games.each do |ping_pong_game| %>
      <tr>
        <td><%= ping_pong_game.datePlayer %></td>
        <td><%= ping_pong_game.opponent %></td>
        <td><%= ping_pong_game.score %></td>
        <td><%= ping_pong_game.score2 %></td>
        <td><%= link_to 'Show', ping_pong_game %></td>
        <td><%= link_to 'Edit', edit_ping_pong_game_path(ping_pong_game) %></td>
        <td><%= link_to 'Destroy', ping_pong_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

